<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "Projmanrails" %></title>
    <meta name="description" content="">
    <meta name="author" content="">
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <%= yield(:head) %>
  </head>
  <body>
    <header class="navbar navbar-fixed-top">
      <nav class="navbar-inner">
        <div class="container">
          <%= render 'layouts/navigation' %>
        </div>
      </nav>
    </header>
    
    <div id="main" role="main">
      <div class="container">
        <div class="content">
           <div class="row">
           <% if current_user.has_role? :admin %>           	
            <div class="span9">
              <%= render 'layouts/messages' %>
              <%= yield %>
            </div>
            <div class="span2 well">
            	<h3>Admin Actions</h3>
				<ul class="nav nav-list">
					<li class="nav-header">Statuses</li>
					<li><%= link_to 'New', {:controller => :statuses, :action => 'new'} %></li>
					<li><%= link_to 'List', {:controller => :statuses} %></li>
					<li class="nav-header">Priorities</li>
					<li><%= link_to 'New', {:controller => :priorities, :action => 'new'} %></li>
					<li><%= link_to 'List', {:controller => :priorities} %></li>
					<li class="nav-header">Users</li>
					<li><%= link_to 'List', {:controller => :users} %></li>
				</ul>
			</div>
			<% else %>
				<div class="span12">
              <%= render 'layouts/messages' %>
              <%= yield %>
            </div>
			<% end %>
          </div>
          <footer>
          </footer>
        </div>
      </div> <!--! end of .container -->
    </div> <!--! end of #main -->
  </body>
</html>