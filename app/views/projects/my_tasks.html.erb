<h1>Listing <%= current_user.name %>'s tasks</h1>
<div class="form-actions">
	<%= link_to raw('<i class="icon-arrow-left"></i>&nbsp;Back'), project_path(@project), :class => 'btn' %>
	<%= link_to 'New Task', new_project_task_path(@project), :class => 'btn btn-primary' %>
	<%= link_to 'All Tasks', project_tasks_url(@project), :class => 'btn' %>
</div>
<table class="table table-striped table-bordered">
  <tr>
    <th><%= link_to 'Name', :sort => "name" %>&nbsp;<i class="icon-chevron-down"></i></th>
    <th><%= link_to 'Status', :sort => 'status_id' %>&nbsp;<i class="icon-chevron-down"></i></th>
    <th>Assigned to</th>
    <th>Due date</th>
    <th>Notes</th>
    <th><%= link_to 'Priority', :sort => 'priority_id' %>&nbsp;<i class="icon-chevron-down"></i></th>
    <th>Browser version</th>
    <th>Actions</th>
  </tr>
<% @tasks.each do |task| %>
  <tr>
    <td><%= link_to task.name, project_task_path(@project, task) %></td>
    <td><%= task.status.name %></td>
    <td><%= task.user.name %></td>
    <td><%= task.due_date.to_date %></td>
    <td><%= task.notes %></td>
    <td><%= task.priority.name %></td>
    <td><%= task.browser_version %></td>
    <td><%= link_to 'Show', project_task_path(@project, task) %> | 
		<%= link_to 'Edit', edit_project_task_path(@project, task) %>
    <%= 
    	#link_to 'Destroy', project_task_path(@project, task), method: :delete, data: { confirm: 'Are you sure?' } 
    %></td>
  </tr>
<% end %>
</table>

<br />

<div class="form-actions">
	<%= link_to raw('<i class="icon-arrow-left"></i>&nbsp;Back'), project_path(@project), :class => 'btn' %>
	<%= link_to 'New Task', new_project_task_path(@project), :class => 'btn btn-primary' %>
	<%= link_to 'All Tasks', project_tasks_url(@project), :class => 'btn' %>
</div>