<h1>Listing tasks</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Status</th>
    <th>Due date</th>
    <th>Project</th>
    <th>Notes</th>
    <th>Priority</th>
    <th>Browser version</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tasks.each do |task| %>
  <tr>
    <td><%= task.name %></td>
    <td><%= task.status_id %></td>
    <td><%= task.due_date %></td>
    <td><%= task.project_id %></td>
    <td><%= task.notes %></td>
    <td><%= task.priority_id %></td>
    <td><%= task.browser_version %></td>
    <td><%= link_to 'Show', task %></td>
    <td><%= link_to 'Edit', edit_task_path(task) %></td>
    <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

